{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],"headers": [ {
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      } ]
    }, {
      "source" : "**/*.@(html|htm)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "public, must-revalidate, proxy-revalidate, max-age=0"
      } ]
    }
     ], "cleanUrls": true,
     "trailingSlash": false
  }
}
